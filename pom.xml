<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sonicle.extjs</groupId>
    <artifactId>sonicle-extjs</artifactId>
    <version>5.1.2.748</version>
    <packaging>jar</packaging>
	<name>sonicle-extjs</name>
	
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
		
		<!-- MAVEN PLUGIN VERSIONS -->
		<maven-resources-plugin.version>2.5</maven-resources-plugin.version>
		<properties-maven-plugin.version>1.0.0</properties-maven-plugin.version>
		<maven-antrun-plugin.version>1.8</maven-antrun-plugin.version>
		<exec-maven-plugin.version>1.5.0</exec-maven-plugin.version>
		<wagon-maven-plugin.version>1.0</wagon-maven-plugin.version>
		
		<!-- UPSTREAM CONFIGURATION (loaded from "${user.home}/.m2/sencha.properties") -->
		<!--
			Define the URL that point to ExtJs download server
		<sencha.extjs.upstream.url>http://cdn.sencha.com/ext/gpl</sencha.extjs.upstream.url>
		
			Define the ExtJs release file-name
		<sencha.extjs.upstream.file>ext-5.1.1-gpl.zip</sencha.extjs.upstream.file>
		-->
    </properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>${properties-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>read-properties</id>
						<phase>validate</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${user.home}/.m2/sencha.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!--
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${maven-resources-plugin.version}</version>
				<executions>
					<execution>
						<id>copy-extjs</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}/client/extjs</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/extjs</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>${maven-antrun-plugin.version}</version>
				<executions>
					<execution>
						<id>apply-regex</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo>Ovverriding validIdRe regex definition to allowing dots</echo>
								<replace token="/^[a-z_][a-z0-9\-_]*$/i" value="/^[a-z_][a-z0-9\-_\.]*$/i" dir="${project.build.outputDirectory}/client/extjs">
									<include name="ext-*.js"/>
								</replace>
							</target>	
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>default-testCompile</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>default-test</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>extjs-download</id>
			<activation>
				<file>
					<missing>target/upstream.zip</missing>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>wagon-maven-plugin</artifactId>
						<version>${wagon-maven-plugin.version}</version>
						<executions>
							<execution>
								<id>download-extjs</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>download-single</goal>
								</goals>
								<configuration>
									<serverId>sencha-download-server</serverId>
									<url>${sencha.extjs.upstream.url}</url>
									<fromFile>${sencha.extjs.upstream.file}</fromFile>
									<toFile>${project.build.directory}/upstream.zip</toFile>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>extjs-unpack</id>
			<activation>
				<file>
					<exists>target/upstream.zip</exists>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>${maven-antrun-plugin.version}</version>
						<executions>
							<execution>
								<id>unpack-extjs</id>
								<phase>process-resources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<unzip src="${project.build.directory}/upstream.zip" dest="${project.build.outputDirectory}/client/extjs">
											<patternset>
												<include name="*/LICENSE" />
											</patternset>
											<mapper>
												<cutdirsmapper dirs="1" />
											</mapper>
										</unzip>
										<unzip src="${project.build.directory}/upstream.zip" dest="${project.build.outputDirectory}/client/extjs">
											<patternset>
												<include name="*/build/*.js" />
												<include name="*/build/packages/**" />
											</patternset>
											<mapper>
												<cutdirsmapper dirs="2" />
											</mapper>
										</unzip>
									</target>	
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>